<div class="container">
    <h1 class='center'>Scrapped Posts</h1>
</div>

{{#each this}}
{{#if _id}}
<div class="col s12 m6 l4" data-id="{{this._id}}">
    <div class="card">
        <div class=" card-image">
            <img src="{{this.imgUrl}}">
            <a href="#modal1" class="save-Post btn-floating halfway-fab waves-effect waves-light red lighten-2 modal-trigger"><i
                    class="material-icons">save</i></a>
        </div>
        <div class="card-content">
            <span class="card-title">{{this.title}}</span>
            <p>{{this.description}}</p>
        </div>
    </div>
</div>
{{/if}}
{{/each}}